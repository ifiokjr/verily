{
	"incremental": true,
	"indentWidth": 2,
	"useTabs": true,
	"exec": {
		"commands": [
			{
				"command": "nixfmt",
				"exts": ["nix"]
			},
			{
				"command": "shfmt --filename {{file_path}} -i 0",
				"exts": ["sh", "bash"]
			},
			{
				"command": ".devenv/profile/bin/dart-format {{file_path}}",
				"exts": ["dart"],
				"stdin": false
			}
		]
	},
	"typescript": {
		"deno": true,
		"useTabs": true,
		"module.sortExportDeclarations": "caseInsensitive",
		"module.sortImportDeclarations": "caseInsensitive"
	},
	"json": {
		"deno": true,
		"useTabs": true
	},
	"toml": {
		"useTabs": true,
		"indentWidth": 2,
		"cargo.applyConventions": true
	},
	"markdown": {
		"deno": true,
		"textWrap": "never"
	},
	"includes": [
		"**/*.{ts,tsx,js,jsx,cjs,mjs,json,jsonc,md,toml,dockerfile,rs,yml,yaml,css,sql,sh,bash,dart,nix}",
		"*.nix"
	],
	"excludes": [
		"**/dist",
		".devenv/**",
		"**/fixtures",
		"**/snapshots",
		"**/target",
		"**/node_modules,",
		"**/changelog.md",
		".bin/",
		".local-cache/",
		"**/dist/**",
		"**/pkg/",
		"apps/reflexy/ios/**",
		"apps/reflexy/android/**"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.94.0.wasm",
		"https://plugins.dprint.dev/json-0.20.0.wasm",
		"https://plugins.dprint.dev/markdown-0.18.0.wasm",
		"https://plugins.dprint.dev/exec-0.5.1.json@492414e39dea4dccc07b4af796d2f4efdb89e84bae2bd4e1e924c0cc050855bf",
		"https://plugins.dprint.dev/toml-0.7.0.wasm",
		"https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.0.wasm"
	]
}
